<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/praguser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmhanna"
            android:text="My page"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <View
            android:layout_width="190dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/settingbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/setting_ripple"
            android:outlineAmbientShadowColor="@color/black"
            android:src="@drawable/ic_baseline_setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/praguser">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragusername"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="35dp"
                android:fontFamily="@font/nbgothic"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/fraguserpoint"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nbgothic_light"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:text="40point" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragtodaysaying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="28dp"
                android:fontFamily="@font/nbgothic"
                android:textColor="@color/black"
                android:text="오늘의 명언" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/user_background" >
                <TextView
                    android:id="@+id/fragfsaying"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:fontFamily="@font/nbgothic_light"
                    android:lineSpacingExtra="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/fragfname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nbgothic_light"
                    android:padding="5dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:id="@+id/recordbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기록지"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ic_baseline_sticky_note"
                android:background="@drawable/user_record_ripple" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>