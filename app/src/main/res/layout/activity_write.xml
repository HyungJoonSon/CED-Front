<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/writeaddbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/setting_ripple"
            android:outlineAmbientShadowColor="@color/black"
            android:src="@drawable/ic_baseline_arrow_back" />

        <View
            android:layout_width="240dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/writebackbtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="저장"
            android:textSize="30dp"
            android:fontFamily="@font/nbgothic"
            android:textColor="@color/black"
            android:background="@drawable/user_record_ripple"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>