<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.JobInfoActivity">

    <LinearLayout
        android:id="@+id/job_data_selecterTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/infobackbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/setting_ripple"
            android:outlineAmbientShadowColor="@color/black"
            android:src="@drawable/ic_baseline_arrow_back" />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmhanna"
            android:gravity="center_vertical"
            android:text="직업 목록"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <View
            android:layout_width="50dp"
            android:layout_height="0dp" />

        <!--        user_record_ripple-->
        <Button
            android:id="@+id/choicebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rank_stopwatch_ripple"
            android:stateListAnimator="@null"
            android:fontFamily="@font/nbgothic"
            android:gravity="center_horizontal|center_vertical"
            android:text="완료"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:id="@+id/selecter_line0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a0a0a0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_data_selecterTop" />


    <ListView
        android:id="@+id/listview_jobinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="71dp"
        android:layout_weight="0.7"
        android:choiceMode="multipleChoice"
        app:layout_constraintTop_toBottomOf="@+id/jobinfo_line1" />

    <View
        android:id="@+id/jobinfo_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a0a0a0"
        app:layout_constraintBottom_toTopOf="@+id/selectall_btn_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="405dp"
        android:layout_height="66dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="660dp" />

</androidx.constraintlayout.widget.ConstraintLayout>